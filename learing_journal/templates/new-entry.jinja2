{% extends "layout.jinja2" %}
{% block body %}

<div class="jumbotron">
  <h1>new-entry.jinja2</h1>
  <!-- TODO: Wrap the back to home link in a button -->
  <h2><a href='/'>Back to Home</a></h2>
  <div class="form-group">
    {% if data %}
    <h1>{{ data.name }}</h1>
    {% endif %}
    <form action="{{ request.route_url('home') }}" method="POST">
      <label for="title">New Journal Title</label><br/>
      <textarea class="form-control" rows="1" maxlength="100" id="title" name="title" placeholder="Enter Journal Title"></textarea>
      <br/>
      <label for="title">Journal Text</label><br/>
      <textarea class="form-control" rows="15" id="body" name="body" placeholder="Enter your new journal text."></textarea>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>

{% endblock %}
